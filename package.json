{
  "name": "solo-leveling-system",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm --filter @solo-leveling/shared build && pnpm --filter @solo-leveling/web build",
    "build:all": "pnpm run --recursive build",
    "api:dev": "pnpm --filter @solo-leveling/api dev",
    "web:dev": "pnpm --filter @solo-leveling/web dev",
    "shared:build": "pnpm --filter @solo-leveling/shared build",
    "supabase:start": "cd infra/supabase && supabase start",
    "supabase:stop": "cd infra/supabase && supabase stop",
    "supabase:status": "cd infra/supabase && supabase status",
    "supabase:migrate": "cd infra/supabase && supabase db reset",
    "db:start": "podman-compose up -d postgres adminer",
    "db:stop": "podman-compose down",
    "db:logs": "podman-compose logs -f postgres",
    "ollama:status": "curl -s http://localhost:11434/api/tags | jq",
    "setup:ollama": "powershell -ExecutionPolicy Bypass -File ./setup-ollama.ps1"
  },
  "devDependencies": {
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
